{
    "name": "yaroslawww/nova-thinkit",
    "description": "Laravel Nova small kit for quicker development.",
    "keywords": [
        "laravel",
        "nova",
        "think"
    ],
    "homepage": "https://github.com/yaroslawww/nova-thinkit",
    "license": "MIT",
    "authors": [
        {
            "name": "Yaroslav Georgitsa",
            "email": "yaroslav.georgitsa@gmail.com",
            "homepage": "https://github.com/yaroslawww",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/nova": "^4.14",
        "think.studio/laravel-simple-image-manager": "^3.4",
        "think.studio/nova-html-field": "^2.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.20",
        "orchestra/testbench": "^8.5",
        "phpunit/phpunit": "^10.2",
        "psalm/plugin-laravel": "^2.8",
        "vimeo/psalm": "^5.13",
        "think.studio/nova-flexible-content": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "NovaThinKit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NovaThinKit\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "XDEBUG_MODE=coverage vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "NovaThinKit\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
